{
    "version": 2,
    "builds": [
        {
            "src": "backend/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "build.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build"
            }
        },
        {
            "src": "manage.py",
            "use": "@vercel/python"
        },
        {
            "src": "staticfiles/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "backend/wsgi.py"
        },
        {
            "src": "/(.*)",
            "dest": "manage.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "blog.settings",
        "SECRET_KEY": "SECRET_KEY",
        "DEBUG": "false"
    }
}